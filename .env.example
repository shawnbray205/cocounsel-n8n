# Supabase Studio Port
SUPABASE_STUDIO_PORT=8000

# ============================================
# n8n CONFIGURATION
# ============================================
# Basic Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_admin_password_here

# Host Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# Timezone
TIMEZONE=America/Los_Angeles

# Logging
N8N_LOG_LEVEL=info

# Security
N8N_SECURE_COOKIE=false

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_PASSWORD=cocounsel_redis_password
REDIS_PORT=6379

# ============================================
# SUPABASE KONG API GATEWAY (Optional)
# ============================================
KONG_HTTP_PORT=8001
KONG_HTTPS_PORT=8443

# ============================================
# STORAGE (Optional)
# ============================================
STORAGE_PORT=8080

# ============================================
# LANGSMITH (Optional - for monitoring)
# ============================================
# Get your API key from: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=lsv2_your_langsmith_key_here
LANGCHAIN_PROJECT=cocounsel-n8n
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ============================================
# OPTIONAL: LEGAL DATABASE APIS
# ============================================
# Westlaw API (replace mock search)
WESTLAW_API_KEY=your_westlaw_api_key

# LexisNexis API (replace mock search)
LEXISNEXIS_API_KEY=your_lexisnexis_api_key

# ============================================
# OPENAI (Optional - for embeddings)
# ============================================
OPENAI_API_KEY=sk-your-openai-key-here

# ============================================
# SSL/HTTPS (for production with Traefik)
# ============================================
# LETSENCRYPT_EMAIL=your@email.com

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ============================================
# MONITORING (Optional)
# ============================================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=false
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# ============================================
# DEVELOPMENT/PRODUCTION
# ============================================
ENVIRONMENT=development
DEBUG=false
